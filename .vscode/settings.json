{
    "editor.formatOnSave": true,
    "editor.formatOnSaveTimeout": 0,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true

        // "**/**.md": true,
        // "**/.prettierrc": true
    },

    "search.exclude": {
        "**/node_modules": true,
        ".prettierrc": true,
        "**/*.md": true
    },

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    }
}
